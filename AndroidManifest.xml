<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.didriksson.mattias.discgolfcards"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.MainScorecard"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.ScorecardSubmenu"
            android:label="@string/title_activity_scorecard_submenu" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.CompleteRoundActivity"
            android:label="@string/title_activity_complete_round" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.RevengeGameActivity"
            android:label="@string/title_activity_revenge_game" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.NewPlayerActivity"
            android:label="@string/title_activity_new_player"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.StatsActivity"
            android:label="@string/title_activity_stats" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.RoundStatsActivity"
            android:label="@string/title_activity_round_stats" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.NewCourseActivity"
            android:label="@string/title_activity_new_course"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.DrawCardPopUpActivity"
            android:label="@string/title_activity_draw_card_pop_up"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.AssignCardToPlayerActivity"
            android:label="@string/title_activity_assign_card_to_player" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.StartGameActivity"
            android:label="@string/title_activity_start_game" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.ActiveCardsActivity"
            android:label="@string/title_activity_active_cards" >
        </activity>
        <activity
            android:name="se.didriksson.mattias.discgolfcards.activities.ActiveCardsPopUp"
            android:label="@string/title_activity_active_cards_pop_up" >
        </activity>
    </application>

</manifest>