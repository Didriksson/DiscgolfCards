<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/defaultbackground"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ChoosePlayerForActiveCards" >

    <TextView
        android:id="@+id/selectplayerEditText"
        style="@style/textviewlarge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center_horizontal|center_vertical"
        android:text="Select player:" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="70" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100" >

            <Button
                android:id="@+id/player1"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player2"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player3"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player4"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player5"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player6"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player7"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/player8"
                style="@style/cardButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:onClick="drawCard"
                android:text="Button"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>