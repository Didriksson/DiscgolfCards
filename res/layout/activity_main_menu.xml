<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubackground_320dpi"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity" >

    <ImageButton
        android:id="@+id/quitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/skinchallengebutton"
        android:layout_below="@+id/skinchallengebutton"
        android:src="@drawable/quitbutton" 
        android:onClick="quitApplication"/>

    <ImageButton
        android:id="@+id/scorecardbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/skinchallengebutton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:src="@drawable/scorecardbutton" 
        android:onClick="startScorecard"/>

    <ImageButton
        android:id="@+id/skinchallengebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scorecardbutton"
        android:layout_centerHorizontal="true"
        android:onClick="startRevengeGame"
        android:src="@drawable/skinchallenge" />

</RelativeLayout>
