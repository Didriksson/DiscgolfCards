<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ScorecardSubmenu" >

    <Button
        android:id="@+id/addPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Add a player" 
        android:onClick="addPlayer"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Start" 
        android:onClick="startScorecard"/>

    <TextView
        android:id="@+id/textviewCoursePar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Scorecard"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textviewCoursePar1" >

        <LinearLayout
            android:id="@+id/playerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editTextP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 1" />

            <EditText
                android:id="@+id/editTextP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 2"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextP3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 3"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextP4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 4"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextP5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 5"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextP6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 6"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextP7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 7"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextP8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:paddingTop="20dp"
                android:text="Player 8"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
    
    
    
</RelativeLayout>