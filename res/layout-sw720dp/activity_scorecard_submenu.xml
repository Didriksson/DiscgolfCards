<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".ScorecardSubmenu" >

    <Button
        android:id="@+id/addPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="New player" 
        android:onClick="newPlayer"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Start" 
        android:onClick="startScorecard"/>

    <TextView
        android:id="@+id/textviewCoursePar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Scorecard"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollExistingPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addPlayer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textviewCoursePar1" >

        <LinearLayout
            android:id="@+id/excistingPlayerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/addPlayerWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scrollExistingPlayers"
        android:layout_alignLeft="@+id/scrollExistingPlayers"
        android:layout_alignRight="@+id/scrollExistingPlayers"
        android:layout_below="@+id/textviewCoursePar1"
        android:background="@drawable/menubar"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/newPlayerEditTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:gravity="center_horizontal|bottom"
            android:inputType="textPersonName"
            android:text="Your name goes here"
            android:textSize="25dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/newPlayerAddButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:padding="25dp"
            android:text="Add" 
            android:onClick="newPlayerAddButton"/>

    </RelativeLayout>
    
</RelativeLayout>